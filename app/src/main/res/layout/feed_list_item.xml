<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/fpf_card_corner_radius" android:id="@+id/fpf_card"
        android:layout_margin="@dimen/fpf_card_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fpf_card_imageview"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fpf_card_name" android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fpf_card_name" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/fpf_card_imageview"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/fpf_card_margin" android:textSize="@dimen/fpf_card_name_textsize"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fpf_card_date" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/fpf_card_margin" app:layout_constraintTop_toBottomOf="@+id/fpf_card_name"
                android:layout_marginTop="@dimen/fpf_card_margin"/>
        <TextView
                android:text="@string/tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fpf_card_tags_text"
                app:layout_constraintTop_toBottomOf="@+id/fpf_card_date" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/fpf_card_margin" android:layout_marginTop="@dimen/fpf_card_margin"
                android:fontFamily="sans-serif-condensed" android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                android:layout_marginBottom="8dp"/>
        <LinearLayout
                android:id="@+id/fpf_card_tags_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/fpf_card_tags_text"
                android:layout_marginStart="@dimen/fpf_card_margin"
                app:layout_constraintTop_toTopOf="@+id/fpf_card_tags_text"
                app:layout_constraintBottom_toBottomOf="@+id/fpf_card_tags_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/fpf_card_margin" android:orientation="horizontal">
            <TextView
                    android:text="@string/fpf_no_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/fpf_card_tags_none" android:layout_weight="1"
                    android:textStyle="italic"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
